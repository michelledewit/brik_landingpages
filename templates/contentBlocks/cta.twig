{% for profileC in profilesC %}
	<div x-show="competitiveScore > humanisticScore && competitiveScore > spontaniousScore && competitiveScore > methodicScore && competitiveScore >= 20" class="mb-12 mt-16">
		<div class="mx-auto text-center py-6 px-4 sm:px-6 lg:px-8 bg-gray-100">
			<div class="text-3xl text-black">
				{{profileC.blockTitle}}
			</div>
			<p class="mt-1 text-lg leading-6 text-black">{{profileC.blockText}}</p>
			{% if profileC.blockLink and profileC.blockLink.url %}
				<a data-ls='{"mouseover":[5,5,-2,-2,5], "click":[15,10,-5,-5,10]}' onclick="ml_account('webforms', '5697559', 'v9l3j9', 'show')" class=" mt-4 w-full inline-flex items-center justify-center px-5 py-1 border border-transparent font-medium text-black bg-white hover:opacity-80 hover:text-black sm:w-auto text-sm">
					{{ profileC.blockLink.text }}
				</a>
			{% endif %}
		</div>
	</div>
