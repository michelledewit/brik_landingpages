								<div class="sm:col-span-2">
									<label for="first-name" class="block text-sm text-black">Naam</label>
									<div class="mt-1">
										<input type="text" name="first-name" id="first-name" autocomplete="given-name" class="py-3 pl-2 block w-full shadow-sm text-black focus:ring-red-400 focus:border-red-300 border-warm-gray-300">
									</div>
								</div>
								<div>
									<label for="email" class="block text-sm text-black">Email</label>
									<div class="mt-1">
										<input id="email" name="email" type="email" autocomplete="email" class="py-3 pl-2 block w-full shadow-sm text-black focus:ring-red-400 focus:border-red-300 border-warm-gray-300">
									</div>
								</div>
								<div>
									<div class="flex justify-between">
										<label for="phone" class="block text-sm text-black">Telefoon</label>
									</div>
									<div class="mt-1">
										<input type="text" name="phone" id="phone" autocomplete="tel" class="py-3 pl-2 block w-full shadow-sm text-black focus:ring-red-400 focus:border-red-300 border-warm-gray-300" aria-describedby="phone-optional">
