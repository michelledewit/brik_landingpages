												<option>Communicatie</option>
												<option>Sales</option>
												<option>CEO</option>
												<option>Projectmanager</option>
												<option>Anders</option>
											</select>
                      <div class="absolute top-0 transform -mt-0.5 translate-y-3 right-2">
                        <svg width="14" height="6" viewbox="0 0 18 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                          <path d="M1 1L9 9L17 1" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
										  </div>
										</div>
									</div>
								</div>
								<div>
									<div class="flex justify-between">
										<label for="phone" class="block text-sm text-black">Actieve sector</label>
									</div>
									<div class="mt-1 relative">
										<select style="font-size: 16px;" id="sector" name="sector" autocomplete="sector-name" class=" max-w-lg block text-black focus:ring-red-400 text-xs focus:border-red-300 pl-2 bg-transparent sm:max-w-xs sm:text-sm border-gray-300">
